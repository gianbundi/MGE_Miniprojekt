<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_200</item>
        <item name="colorPrimaryVariant">@color/cyan_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Action bar -->
        <item name="android:actionBarTheme">@color/cyan_200</item>


        <item name="colorOnBackground">@color/black</item>
        <item name="strokeColor">@color/darkgray</item>


        <item name="android:navigationBarColor">@color/yellow_200</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/lightgray</item>

    </style>
</resources>